<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
    <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
    <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/hibernate_ejercicio01?zeroDateTimeBehavior=convertToNull</property>
    <property name="hibernate.connection.username">hibernate1</property>
    <property name="hibernate.connection.password">hibernate1</property>
    <!--<mapping resource="com/java/hibernate/ejercicio02/persistence/Seguro.hbm.xml"/>-->
    <mapping class="com.java.hibernate.ejercicio02.jpa.Seguro" />
  </session-factory>
</hibernate-configuration>
