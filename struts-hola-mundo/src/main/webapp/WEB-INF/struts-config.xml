<!DOCTYPE struts-config PUBLIC 
'-//Apache Software Foundation//DTD Struts Configuration 1.3//EN' 
'http://jakarta.apache.org/struts/dtds/struts-config_1_3.dtd'>

<struts-config>
    
    <form-beans>
        <form-bean name="holaMundoForm"
                   type="com.java.struts.hola.mundo.form.HolaMundoForm" />
    </form-beans>
    
    <action-mappings>
        <action path="/holaMundo"
                type="com.java.struts.hola.mundo.action.HolaMundoAction"
                name="holaMundoForm">
            <forward name="success" path="/HolaMundo.jsp" />
        </action>
    </action-mappings>
    
</struts-config>
